{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/schemas/recipe-combined.json",
    "title": "Recipe (Combined Schema)",
    "description": "A standalone recipe entry with embedded content block definitions.",
    "type": "object",
    "definitions": {
        "contentBlock": {
            "description": "Represents a piece of information that can be a simple string or a titled object with a list of detail strings.",
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            ]
        }
    },
    "properties": {
        "number": {
            "type": "number",
            "description": "The unique number of the recipe."
        },
        "title": {
            "type": "string",
            "description": "The title of the recipe."
        },
        "type": {
            "description": "The type of entry, which must be 'recipe'.",
            "const": "recipe"
        },
        "introduction": {
            "$ref": "#/definitions/contentBlock"
        },
        "notes": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/contentBlock"
            }
        },
        "yield": {
            "type": "string"
        },
        "ingredients": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/contentBlock"
            }
        },
        "instructions": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/contentBlock"
            }
        }
    },
    "required": ["number", "title", "type"]
}