{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/schemas/content-block.json",
    "title": "Content Block",
    "description": "Represents a piece of information that can be a simple string or a titled object with a list of detail strings.",
    "oneOf": [
        {
            "type": "string"
        },
        {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        }
    ]
}
