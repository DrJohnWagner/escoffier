{
    "name": "escoffier",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint",
        "types:generate": "json2ts -i data/schemas/ --cwd data/schemas/ -o types/generated.ts",
        "types:watch": "json2ts -i data/schemas/ --cwd data/schemas/ -o types/generated.ts --watch",
        "validate:chapters": "for file in data/chapters/chapter-*.json; do echo \"--- Validating '$file' ---\"; cat \"$file\" | node scripts/validate-chapter.mjs; done"
    },
    "dependencies": {
        "ajv": "^8.17.1",
        "next": "16.0.0",
        "react": "19.2.0",
        "react-dom": "19.2.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4",
        "@tailwindcss/typography": "^0.5.19",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^9.38.0",
        "eslint-config-next": "16.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "json-schema-to-typescript": "^15.0.4",
        "prettier": "^3.6.2",
        "tailwindcss": "^4",
        "typescript": "^5"
    }
}
